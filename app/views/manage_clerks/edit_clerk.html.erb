
<section class="Main-box Shadow">
<h3 class="Hilight">Edit Clerk Details</h3>
<%= form_with(url: "/manage_clerks/#{@clerk.id}"  , method: "put") do %> 
   
    <input type="text" value="<%= @clerk.name%>" name="name">
    <input type="text" value="<%= @clerk.email%>" name="email">
    
    <input type="submit" value="update" onclick="this.form.submit()">
    
<% end %>

